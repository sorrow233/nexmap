{
  "manifest_version": 3,
  "name": "Aimainmap Flow Capture",
  "version": "0.3.1",
  "description": "选中文本后可点击简洁 Flow 按钮发送，右键菜单也可一键发送到 FlowStudio。",
  "permissions": ["storage", "alarms", "contextMenus"],
  "host_permissions": ["https://flowstudio.catzz.work/*"],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "content/constants.js",
        "content/storage.js",
        "content/selection.js",
        "content/transport.js",
        "content/ui.js",
        "content/main.js"
      ],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options/options.html",
  "action": {
    "default_title": "Aimainmap Flow Capture",
    "default_popup": "options/options.html"
  }
}
